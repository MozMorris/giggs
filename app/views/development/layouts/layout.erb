<!doctype html>
<html class="no-js">
    <head>
        <meta charset="utf-8">
        <title>Giggs | Sinatra &amp; Create.js CMS</title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width">
        <link rel="shortcut icon" href="/favicon.ico">
        <!-- Place favicon.ico and apple-touch-icon.png in the root directory -->

        <% if signed_in? %>
            <!-- build:css(dev) /styles/create.css -->
            <link rel="stylesheet" href="/bower_components/create/examples/font-awesome/css/font-awesome.css">
            <link rel="stylesheet" href="/bower_components/create/themes/create-ui/css/create-ui.css">
            <link rel="stylesheet" href="/bower_components/create/themes/midgard-notifications/midgardnotif.css">
            <!-- endbuild -->
        <% end %>

        <!-- build:css /styles/vendor.css -->
        <!-- bower:css -->
        <!-- endbower -->
        <!-- endbuild -->

        <!-- build:css(dev) /styles/main.css -->
        <link rel="stylesheet" href="/tmp/styles/main.css">
        <!-- endbuild -->
        <!-- build:js(dev) /scripts/vendor/modernizr.js -->
        <script src="/bower_components/modernizr/modernizr.js"></script>
        <!-- endbuild -->

        <%== yield_content :head %>
    </head>
    <body>
        <!--[if lt IE 10]>
            <p class="browsehappy">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
        <![endif]-->

        <div class="site-wrapper">
            <div class="site-wrapper-inner">
                <div class="cover-container">
                    <%== erb 'partials/_header'.to_sym %>

                    <div class="inner cover">
                        <%== yield %>
                    </div>

                    <div class="mastfoot">
                        <div class="inner">
                            <p>
                                A simple CMS built with <a href="http://www.sinatrarb.com/" title="Sinatra">Sinatra</a> and <a href="http://createjs.org/" title="Create.js - Make anything editable">Create.js</a>, by <a href="http://www.mozmorris.com/" title="Moz Morris">MozMorris</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- build:js(dev) /scripts/vendor.js -->
        <!-- bower:js -->
        <script src="/bower_components/jquery/jquery.js"></script>
        <!-- endbower -->
        <!-- endbuild -->

        <% if signed_in? %>
            <!-- build:js(dev) /scripts/create.js -->
            <script src="/bower_components/jquery-ui/ui/jquery-ui.js"></script>
            <script src="/bower_components/underscore/underscore.js"></script>
            <script src="/bower_components/backbone/backbone.js"></script>
            <script src="/bower_components/jquery-rdfquery/js/jquery.rdfquery.core.js"></script>
            <script src="/bower_components/jquery-rdfquery/js/jquery.rdfquery.rdfa.js"></script>
            <script src="/bower_components/jquery-rdfquery/js/jquery.rdfquery.rules.js"></script>
            <script src="/bower_components/vie/dist/vie.js"></script>
            <script src="/bower_components/jquery.tagsinput/jquery.tagsinput.js"></script>
            <script src="/bower_components/annotate/annotate.js"></script>
            <script src="/bower_components/jquery-htmlclean/jquery.htmlClean.js"></script>
            <script src="/bower_components/rangy/rangy-core.js"></script>
            <script src="/bower_components/hallo/dist/hallo.js"></script>
            <script src="/bower_components/create/dist/create.js"></script>
            <!-- endbuild -->
        <% end %>

